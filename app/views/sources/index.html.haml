- if user_signed_in? && current_user.has_role?(:admin)
  = link_to 'Add a Source', new_source_path, class: [:btn, 'btn-primary']

%table.table.table-striped
  %thead
    %tr
      %th Title
      %th &nbsp;
  %tbody
    - @sources.each do |source|
      %tr{id: dom_id(source)}
        %td= source
        %td
          - if user_signed_in? && current_user.has_role?(:admin)
            = link_to 'Edit', edit_source_path(source), class: [:btn, 'btn-primary']